print: cfunc (format: ^byte, ...) -> void;

/* basic increment function, takes pointer and amount to increment */
inc: (n: ^int, amount: int) -> void {
	print("incremented number from %d to %d\n", $n, $n + amount);
	$n = $n + amount;
}

main: () -> void {

	thing: int;
	index: int;
	
	thing = 0;
	
	for (index = 0; index < 10; index += 1)	
		inc(@thing, 10);

	print("%d\n", thing);

}
